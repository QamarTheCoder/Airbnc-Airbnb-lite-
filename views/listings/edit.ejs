<% layout('layout/boilerplate') -%>

<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <br><br>
    <h1>Update Your Listing</h1>
    <br><br>
        <form method="post" action="/listings/<%= resdata._id %>?_method=PUT" class="needs-validation" novalidate enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-lable">Title</label>
            <input name="title" value="<%=resdata.title %>" class="form-control" required>
            <div class="valid-feedback">
                Title looks good!
            </div>
            <div class="invalid-feedback">
                Title is required
            </div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-lable">Description</label>
            <textarea name="description" class="form-control" required><%=resdata.description %></textarea>
            <div class="valid-feedback">
                Description looks good!
            </div>
            <div class="invalid-feedback">
                Please enter a description
            </div>
            
        </div>
        <div class="mb-3">
            <label for="location" class="form-lable">Location</label>
            <input name="location" value="<%=resdata.location %>" class="form-control" required>
            <div class="valid-feedback">
                Location looks good!
            </div>
            <div class="invalid-feedback">
                Location should be valid
            </div>
        </div>
        
        <div class="mb-3">
            <br> 
            <div>
                <lable>Original Listing Image</lable>
                <img src="<%= ORIGINAL_IMAGE %>" style="display: block; border-radius: 10px; box-shadow: 5px 5px 10px grey;">
            </div>
            <br> 


            <label for="image" class="form-lable">Upload New Image</label>
            <input name="image" type="file" class="form-control">
            <div class="valid-feedback">
                Image looks good!
            </div>
            <div class="invalid-feedback">
                Please enter a valid picture!
            </div>
        </div>
        <div class="row">
            <div class="mb-3 col-md-8">
                <label for="country" class="form-lable">Country</label>
                <input name="country" value="<%=resdata.country %>" class="form-control" required>
                <div class="valid-feedback">
                    Country looks good!
                </div>
                <div class="invalid-feedback">
                    Country should be valid
                </div>

            </div>
            <div class="mb-3 col-md-4 ">
                <label for="price" class="form-lable">Price</label>
                <input name="price" value="<%=resdata.price %>" class="form-control" required>
                <div class="valid-feedback">
                    Price looks good!
                </div>
                <div class="invalid-feedback">
                    Please enter a valid price!
                </div>
            </div>
     </div>
        <br>
            <button class="btn btn-dark mb-2 cb">Update</button>
        </form>
    </div>
    </div>
</body>
